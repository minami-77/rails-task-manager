<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= task.completed ? "Completed!" : "Not yet..." %>
      <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
       %>
    </li>
  <% end %>
</ul>
<li><%= link_to "Add a new task", tasks_new_path %></li>
